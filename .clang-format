  - avl_for_each_init
  - avl_for_each_safe_init
  - avl_for_each_entry_init
  - avl_for_each_entry_safe_init

  - rb_for_each
  - rb_for_each_safe
  - rb_for_each_entry
  - rb_for_each_entry_safe
  - rb_for_each_init
  - rb_for_each_safe_init
  - rb_for_each_entry_init
  - rb_for_each_entry_safe_init

  - splay_for_each
  - splay_for_each_safe
  - splay_for_each_entry
  - splay_for_each_entry_safe
  - splay_for_each_init
  - splay_for_each_safe_init
  - splay_for_each_entry_init
  - splay_for_each_entry_safe_init

